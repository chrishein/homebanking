<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Users</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>E-mail</th>
              <% if can? :manage, :user %>
              <th colspan="4"></th>
              <% end %>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <%= link_to user_path(user) do %>
                    <%= user.email %>
                  <% end %>
                </td>
                <% if can? :manage, :user %>
                <td><%= link_to 'Show', user, class: 'btn btn-default btn-xs' %></td>
                <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-default btn-xs' %></td>
                <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-xs' %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <%= will_paginate @users %>
    </div>
  </div>
<% if can? :manage, :user %>
<%= link_to 'New User', new_user_path, class: 'btn btn-primary btn-sm' %>
<% end %>
