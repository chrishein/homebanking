<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><%= t('.sign_in') %></h3>
                </div>
                <div class="login-brand">
                  <%= cl_image_tag(AppSetting.settings.logo, :height => 50, :crop => :scale) %>
                  <h1 class="text-center"><%= AppSetting.settings.app_title %></h1>
                </div>
                <div class="panel-body">
                    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                        <fieldset>
                            <div class="form-group">
                                <%= f.input :email, required: false, autofocus: true, class: 'form-control',
                                    placeholder: 'E-mail', label: false %>
                            </div>
                            <div class="form-group">
                                <%= f.input :password, required: false,  class: 'form-control',
                                    placeholder: t('activerecord.attributes.user.password'), label: false %>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                                </label>
                            </div>
                            <%= f.button :submit, t('.sign_in'), class: 'btn btn-lg btn-success btn-block' %>
                        </fieldset>
                    <% end %>
                    <%= render "devise/shared/links" %>
                </div>
            </div>
        </div>
    </div>
</div>
