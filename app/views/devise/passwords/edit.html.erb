<h2><%= t('.change_your_password') %></h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, label: t('.password'), required: true, autofocus: true,
        hint: (t('.minimum_password_length', :minimum_password_length => @minimum_password_length) if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: t('.password_confirmation'), required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('.change_my_password') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
