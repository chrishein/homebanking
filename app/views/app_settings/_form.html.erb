<%= simple_form_for(@app_setting, url: app_settings_path,
                                  html: { multipart: true }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :app_title %>

    <%= content_tag(:div, class: 'form-group clearfix') do %>
      <%= f.input :logo_cache, :as => :hidden %>
      <%= f.input :logo, as: :file %>
      <%= content_tag(:div, class: 'form-group') do %>
        <% unless @app_setting.logo.nil? %>
          <%= cl_image_tag(@app_setting.logo, :width => 100, :height => 100, :class => 'pull-left') %>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <%= f.input :home_content, as: :bootsy, :input_html => {:rows => 16, 'data-bootsy-locale' => 'es'} %>

  <div class="form-actions">
    <%= f.button :submit, t('.save_app_settings'), class: 'btn btn-primary btn-sm' %>
  </div>
<% end %>
