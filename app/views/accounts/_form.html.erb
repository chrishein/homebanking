<%= simple_form_for(@account) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :currency %>
    <%= f.association :client %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary btn-sm' %>
  </div>
<% end %>
