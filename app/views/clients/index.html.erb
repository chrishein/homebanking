<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= t('.clients') %></h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th><%= t('.name') %></th>
              <% if can? :manage, :client %>
              <th colspan="3"></th>
              <% end %>
            </tr>
          </thead>

          <tbody>
            <% @clients.each do |client| %>
              <tr>
                <td>
                  <%= link_to client_accounts_path(client) do %>
                    <%= client.name %>
                  <% end %>
                </td>
                <% if can? :manage, :client %>
                <td><%= link_to t('actions.show'), client, class: 'btn btn-default btn-xs' %></td>
                <td><%= link_to t('actions.edit'), edit_client_path(client), class: 'btn btn-default btn-xs' %></td>
                <td><%= link_to t('actions.destroy'), client, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-xs' %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <%= will_paginate @clients %>
    </div>
  </div>
<% if can? :manage, :client %>
<%= link_to t('.new_client'), new_client_path, class: 'btn btn-primary btn-sm' %>
<% end %>
