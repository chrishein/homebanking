<%= simple_form_for([@account, @account_movement]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :movement_date %>
    <%= f.input :concept %>
    <%= f.input :credit %>
    <%= f.input :debit %>
    <%= f.input :balance %>
    <%= f.association :account %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary btn-sm' %>
  </div>
<% end %>
