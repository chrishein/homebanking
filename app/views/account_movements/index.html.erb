<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Account Movements</h1>
    </div>
    <div class="col-lg-12">
        <h2><%= @account.to_s %></h3>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Movement date</th>
              <th>Concept</th>
              <th>Credit</th>
              <th>Debit</th>
              <th>Balance</th>
            </tr>
          </thead>

          <tbody>
            <% @account_movements.each do |account_movement| %>
              <tr>
                <td><%= account_movement.movement_date %></td>
                <td><%= account_movement.concept %></td>
                <td><%= number_to_currency(account_movement.credit) %></td>
                <td><%= number_to_currency(account_movement.debit) %></td>
                <td><%= number_to_currency(account_movement.balance) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <%= will_paginate @account_movements %>
    </div>
  </div>
<% if can? :manage, :account_movement %>
<%= link_to 'New Account movement', new_account_account_movement_path(@account), class: 'btn btn-primary btn-sm' %>
<% end %>
